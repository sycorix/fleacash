                        android:textSize="@dimen/font_size_n"
                        android:id="@+id/button19"
                        android:layout_weight="1"
                        android:layout_column="3"
                        android:onClick="buttonAmountOnClick"
                        android:clickable="true" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/tableRowAmount2" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="@dimen/font_size_n"
                        android:id="@+id/button14"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:onClick="buttonAmountOnClick"
                        android:clickable="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="@dimen/font_size_n"
                        android:id="@+id/button15"
                        android:layout_weight="1"
                        android:layout_column="2"
                        android:onClick="buttonAmountOnClick"
                        android:clickable="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textSize="@dimen/font_size_n"
                        android:id="@+id/button16"
                        android:layout_weight="1"
                        android:layout_column="3"
                        android:onClick="buttonAmountOnClick"
                        android:clickable="true" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/tableRowAmount3" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="@dimen/font_size_n"
                        android:id="@+id/button11"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:onClick="buttonAmountOnClick"
                        android:clickable="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="@dimen/font_size_n"
                        android:id="@+id/button12"
                        android:layout_weight="1"
                        android:layout_column="2"
                        android:onClick="buttonAmountOnClick"
                        android:clickable="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="@dimen/font_size_n"
                        android:id="@+id/button13"
                        android:layout_weight="1"
                        android:layout_column="3"
                        android:onClick="buttonAmountOnClick"
                        android:clickable="true" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tableRowAmount4" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/font_size_n"
                        android:id="@+id/button10"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:onClick="buttonAmountOnClick"
                        android:clickable="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=","
                        android:textSize="@dimen/font_size_n"
                        android:id="@+id/button1c"
                        android:layout_weight="1"
                        android:layout_column="2"
                        android:onClick="buttonAmountOnClick"
                        android:clickable="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ok"
                        android:textSize="@dimen/font_size_n"
                        android:id="@+id/button1o"
                        android:layout_weight="1"
                        android:layout_column="3"
                        android:onClick="buttonAmountOnClick"
                        android:clickable="true" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
